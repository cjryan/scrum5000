<h3>Displaying the results for Sprint <%= @user_selected_sprint.sprint_number %> for <%= @scrum_email %></h3>
<table>
    <tr>
      <th>Scrum Date</th>
      <th>Scrum User</th>
      <th colspan="2"></th>
    </tr>
<% @scrum_by_user.each do |daily_scrum| %>
  <tr>
    <td><%=daily_scrum.scrum_date%></td>
    <td><%=User.find_by(:id=>daily_scrum.scrum_user).email%></td>
    <td><%=link_to 'Show', daily_scrum_path(daily_scrum) %></td>
    <% if User.find_by(:id=>daily_scrum.scrum_user).email == current_user.email%>
      <td><%=link_to 'Edit', edit_daily_scrum_path(daily_scrum) %></td>
    <% end %>
  </tr>
<% end %>
</table>

