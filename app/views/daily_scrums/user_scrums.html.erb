<% if user_signed_in? %>
  <%= form_for :daily_scrum, url: daily_scrums_search_user_scrums_path do |f| %>
    <p>
      <%= f.label :scrum_sprint, "Please select a sprint:" %><br>
      <%= f.collection_select :sprint_id, Sprint.all.order('sprint_number DESC'), :id, :sprint_number %>
    </p>
    <p>
      <%= f.label :scrum_user, "Please select a user:" %><br>
      <%= f.collection_select :user_id, User.all.order('email ASC'), :id, :email %>
    </p>
    <p>
      <%= f.submit "Choose a sprint" %>
    </p>
  <% end %>
<% else %>
    <div id="error_explanation">
      <h3>Please sign in.</h3>
    </div><!-- end error_explanation -->
<% end %>
